<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Animal">

    <ImageView
        android:id="@+id/imgCows"
        android:layout_width="320dp"
        android:layout_height="220dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="44dp"
        android:layout_marginTop="32dp"
        android:contentDescription="@string/cow"
        app:srcCompat="@drawable/cows" />

    <ImageView
        android:id="@+id/imgPigs"
        android:layout_width="315dp"
        android:layout_height="252dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="49dp"
        android:layout_marginBottom="83dp"
        android:contentDescription="@string/pig"
        app:srcCompat="@drawable/pigs" />

    <Button
        android:id="@+id/btnCows"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="265dp"
        android:text="@string/btnCows"
        android:textSize="22sp" />

    <Button
        android:id="@+id/btnPigs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="37dp"
        android:text="@string/btnPig"
        android:textSize="22sp" />
</RelativeLayout>
